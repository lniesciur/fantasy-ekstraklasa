---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout
  title="Gameweeks Management - Admin Panel"
  breadcrumbs={[
    { label: "Admin Panel", href: "/admin" },
    { label: "Gameweeks" }
  ]}
  user={{ id: "1", email: "admin@example.com", role: "admin" }}
  activeTab="gameweeks"
>
  <div class="max-w-7xl mx-auto">
      <div class="mb-8 flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Gameweeks Management</h1>
          <p class="text-gray-600 mt-2">Create and manage gameweek periods</p>
        </div>
        <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
          Add Gameweek
        </button>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="text-center text-gray-500 py-12">
          <p>Gameweeks management interface will be implemented here</p>
        </div>
      </div>
    </div>
</AdminLayout>
