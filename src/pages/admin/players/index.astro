---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import PlayersTable from "../../../components/admin/PlayersTable.tsx";
---

<AdminLayout
  title="Players Management - Admin Panel"
  breadcrumbs={[
    { label: "Admin Panel", href: "/admin" },
    { label: "Players" }
  ]}
  user={{ id: "1", email: "admin@example.com", role: "admin" }}
  activeTab="players"
>
  <div class="max-w-7xl mx-auto">
      <div class="mb-8 flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Players Management</h1>
          <p class="text-gray-600 mt-2">Create, edit, and manage player records</p>
        </div>
        <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
          Add Player
        </button>
      </div>

      <!-- Filters and Search -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex flex-col sm:flex-row gap-4">
          <input
            type="text"
            placeholder="Search players..."
            class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <select class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option>All Teams</option>
          </select>
          <select class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option>All Positions</option>
            <option>GK</option>
            <option>DEF</option>
            <option>MID</option>
            <option>FWD</option>
          </select>
        </div>
      </div>

      <!-- Players Table -->
      <PlayersTable client:load />
    </div>
</AdminLayout>
