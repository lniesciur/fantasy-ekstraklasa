---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout
  title="Auto-Scraping - Admin Panel"
  breadcrumbs={[
    { label: "Admin Panel", href: "/admin" },
    { label: "Auto-Scraping" }
  ]}
  user={{ id: "1", email: "admin@example.com", role: "admin" }}
  activeTab="auto-scraping"
>
  <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Auto-Scraping</h1>
        <p class="text-gray-600 mt-2">Trigger and monitor automated data collection processes</p>
      </div>

      <!-- Control Panel -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Scraping Controls</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Scrape Type Selector -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Scrape Type</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option>Daily Main</option>
              <option>Pre-Gameweek</option>
              <option>Post-Gameweek</option>
              <option>Manual</option>
            </select>
          </div>

          <!-- Gameweek Selector -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Gameweek (Optional)</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option>Current Gameweek</option>
              <option>Next Gameweek</option>
              <option>All Gameweeks</option>
            </select>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-6 flex space-x-4">
          <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
            Start Scraping
          </button>
          <button class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
            Stop Current Job
          </button>
        </div>
      </div>

      <!-- Status Display -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Current Status</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-2">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900">Status</h3>
            <p class="text-green-600 font-medium">Idle</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-2">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900">Last Run</h3>
            <p class="text-gray-600">2 hours ago</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-2">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="font-medium text-gray-900">Success Rate</h3>
            <p class="text-purple-600 font-medium">98.5%</p>
          </div>
        </div>
      </div>

      <!-- Scraping History -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Scraping History</h2>
        <div class="text-center text-gray-500 py-8">
          <p>No scraping jobs have been run yet.</p>
        </div>
      </div>
    </div>
</AdminLayout>
