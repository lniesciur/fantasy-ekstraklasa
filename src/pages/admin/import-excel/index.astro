---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout
  title="Excel Import - Admin Panel"
  breadcrumbs={[
    { label: "Admin Panel", href: "/admin" },
    { label: "Excel Import" }
  ]}
  user={{ id: "1", email: "admin@example.com", role: "admin" }}
  activeTab="import-excel"
>
  <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Excel Import</h1>
        <p class="text-gray-600 mt-2">Upload player statistics and data via Excel templates</p>
      </div>

      <!-- Upload Section -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Upload Excel File</h2>

        <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
          <div class="space-y-4">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
            </div>
            <div>
              <p class="text-lg font-medium text-gray-900">Drop your Excel file here</p>
              <p class="text-gray-600">or <button class="text-blue-600 hover:text-blue-700 font-medium">browse files</button></p>
            </div>
            <p class="text-sm text-gray-500">Supported formats: .xlsx (max 10MB)</p>
          </div>
        </div>
      </div>

      <!-- Template Download -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Template</h2>
        <p class="text-gray-600 mb-4">Download the Excel template to ensure your data is formatted correctly.</p>
        <button class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-6 rounded-md transition duration-200">
          Download Template
        </button>
      </div>

      <!-- Import History -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Import History</h2>
        <div class="text-center text-gray-500 py-8">
          <p>No imports yet. Upload your first Excel file to get started.</p>
        </div>
      </div>
    </div>
</AdminLayout>
