---
import AuthenticatedLayout from "../layouts/AuthenticatedLayout.astro";
---

<AuthenticatedLayout
  title="Lineup Builder - Fantasy Ekstraklasa"
  breadcrumbs={[
    { label: "Dashboard", href: "/dashboard" },
    { label: "Lineup Builder" }
  ]}
  user={{ id: "1", email: "user@example.com", role: "user" }}
>
  <div class="bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-foreground">Lineup Builder</h1>
        <p class="text-muted-foreground mt-2">Create your optimal fantasy football lineup</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Formation Selector -->
        <div class="lg:col-span-1">
          <div class="bg-card rounded-lg shadow-md p-6 border border-border">
            <h2 class="text-xl font-semibold text-card-foreground mb-4">Formation</h2>
            <div class="space-y-2">
              <button class="w-full text-left px-4 py-2 bg-primary/10 text-primary rounded-md hover:bg-primary/20 transition duration-200">
                1-4-4-2
              </button>
              <button class="w-full text-left px-4 py-2 bg-muted text-muted-foreground rounded-md hover:bg-muted/80 transition duration-200">
                1-4-3-3
              </button>
              <button class="w-full text-left px-4 py-2 bg-muted text-muted-foreground rounded-md hover:bg-muted/80 transition duration-200">
                1-3-4-3
              </button>
            </div>
          </div>

          <!-- Budget Info -->
          <div class="bg-card rounded-lg shadow-md p-6 mt-6 border border-border">
            <h2 class="text-xl font-semibold text-card-foreground mb-4">Budget</h2>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-muted-foreground">Used:</span>
                <span class="font-medium text-card-foreground">£0.0M</span>
              </div>
              <div class="flex justify-between">
                <span class="text-muted-foreground">Remaining:</span>
                <span class="font-medium text-accent">£30.0M</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Pitch Area -->
        <div class="lg:col-span-2">
          <div class="bg-card rounded-lg shadow-md p-6 border border-border">
            <h2 class="text-xl font-semibold text-card-foreground mb-6 text-center">Your Lineup</h2>

            <!-- Pitch Visualization -->
            <div class="relative bg-accent/5 rounded-lg p-4 mb-6 border-2 border-accent/20" style="aspect-ratio: 3/4;">
              <div class="absolute inset-0 flex flex-col justify-between">
                <!-- Goalkeeper -->
                <div class="flex justify-center">
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    GK
                  </div>
                </div>

                <!-- Defense -->
                <div class="flex justify-around">
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    DEF
                  </div>
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    DEF
                  </div>
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    DEF
                  </div>
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    DEF
                  </div>
                </div>

                <!-- Midfield -->
                <div class="flex justify-around">
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    MID
                  </div>
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    MID
                  </div>
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    MID
                  </div>
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    MID
                  </div>
                </div>

                <!-- Forward -->
                <div class="flex justify-around">
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    FWD
                  </div>
                  <div class="w-12 h-12 bg-secondary border-2 border-border rounded-full flex items-center justify-center text-xs font-medium text-secondary-foreground">
                    FWD
                  </div>
                </div>
              </div>
            </div>

            <!-- Bench -->
            <div>
              <h3 class="text-lg font-medium text-gray-900 mb-3">Bench</h3>
              <div class="grid grid-cols-4 gap-2">
                <div class="w-12 h-12 bg-gray-200 border-2 border-gray-400 rounded-full flex items-center justify-center text-xs font-medium mx-auto">
                  P1
                </div>
                <div class="w-12 h-12 bg-gray-200 border-2 border-gray-400 rounded-full flex items-center justify-center text-xs font-medium mx-auto">
                  P2
                </div>
                <div class="w-12 h-12 bg-gray-200 border-2 border-gray-400 rounded-full flex items-center justify-center text-xs font-medium mx-auto">
                  P3
                </div>
                <div class="w-12 h-12 bg-gray-200 border-2 border-gray-400 rounded-full flex items-center justify-center text-xs font-medium mx-auto">
                  P4
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="mt-6 flex space-x-4">
            <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-md transition duration-200">
              Save Lineup
            </button>
            <button class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-3 px-6 rounded-md transition duration-200">
              Bonuses (Coming Soon)
            </button>
          </div>
        </div>
      </div>

      <!-- Player Selection Panel -->
      <div class="mt-8">
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Select Players</h2>
          <div class="text-center text-gray-500 py-8">
            <p>Player selection interface will be implemented here</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</AuthenticatedLayout>
