---
import AdminLayout from "../layouts/AdminLayout.astro";
---

<AdminLayout
  title="Admin Panel - Fantasy Ekstraklasa"
  breadcrumbs={[{ label: "Admin Panel" }]}
  user={{ id: "1", email: "admin@example.com", role: "admin" }}
>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-foreground">Admin Panel</h1>
    <p class="text-muted-foreground mt-2">Manage data imports, scraping, and system administration</p>
  </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Excel Import -->
        <div class="bg-card rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border border-border">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Excel Import</h3>
            <p class="text-muted-foreground mb-4">Upload player statistics via Excel templates</p>
            <button class="bg-primary hover:bg-primary/90 text-primary-foreground font-medium py-2 px-6 rounded-md transition duration-200">
              Go to Import
            </button>
          </div>
        </div>

        <!-- Auto-Scraping -->
        <div class="bg-card rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border border-border">
          <div class="text-center">
            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Auto-Scraping</h3>
            <p class="text-muted-foreground mb-4">Trigger automated data collection</p>
            <button class="bg-accent hover:bg-accent/90 text-accent-foreground font-medium py-2 px-6 rounded-md transition duration-200">
              Go to Scraping
            </button>
          </div>
        </div>

        <!-- Players Management -->
        <div class="bg-card rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border border-border">
          <div class="text-center">
            <div class="w-16 h-16 bg-chart-1/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-chart-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Players</h3>
            <p class="text-muted-foreground mb-4">Manage player database</p>
            <button class="bg-chart-1 hover:bg-chart-1/90 text-primary-foreground font-medium py-2 px-6 rounded-md transition duration-200">
              Manage Players
            </button>
          </div>
        </div>

        <!-- Matches Management -->
        <div class="bg-card rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border border-border">
          <div class="text-center">
            <div class="w-16 h-16 bg-chart-2/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-chart-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m0 0l-2-2m2 2l2-2m6-6v6a2 2 0 01-2 2H6a2 2 0 01-2-2v-6a2 2 0 012-2h8a2 2 0 012 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Matches</h3>
            <p class="text-muted-foreground mb-4">Manage match schedules</p>
            <button class="bg-chart-2 hover:bg-chart-2/90 text-primary-foreground font-medium py-2 px-6 rounded-md transition duration-200">
              Manage Matches
            </button>
          </div>
        </div>

        <!-- Gameweeks Management -->
        <div class="bg-card rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border border-border">
          <div class="text-center">
            <div class="w-16 h-16 bg-chart-3/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-chart-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 8h6m6 0v8a2 2 0 01-2 2H6a2 2 0 01-2-2v-8a2 2 0 012-2h8a2 2 0 012 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">Gameweeks</h3>
            <p class="text-muted-foreground mb-4">Manage gameweek periods</p>
            <button class="bg-chart-3 hover:bg-chart-3/90 text-primary-foreground font-medium py-2 px-6 rounded-md transition duration-200">
              Manage Gameweeks
            </button>
          </div>
        </div>

        <!-- System Status -->
        <div class="bg-card rounded-lg shadow-md p-6 border border-border">
          <div class="text-center">
            <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-card-foreground mb-2">System Status</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-muted-foreground">Data Freshness:</span>
                <span class="font-medium text-accent">Good</span>
              </div>
              <div class="flex justify-between">
                <span class="text-muted-foreground">Last Scrape:</span>
                <span class="font-medium text-card-foreground">2 hours ago</span>
              </div>
            </div>
          </div>
        </div>
    </div>
</AdminLayout>
